  <!DOCTYPE html>
html(lang="en")
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(href="css/bootstrap.min.css" rel="stylesheet")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css")
        link(href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css')
        link(href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css')
        title Register
        link(href="/css/register.css", rel="stylesheet")
    body
        div.container
            h3.text-center.text-white.pt-5 REGISTER FORM
            div.row.main
                div.main-login.main-center
                    form(method="post" action="/register")
                        div.form-group
                            label.cols-sm-2.control-label(for="username") Username
                            div.cols-sm-10
                                div.input-group
                                    span.input-group-addon
                                        i.fa.fa-user.fa(aria-hidden="true")
                                    input#username.form-control(type="text" name="username" placeholder="Enter your Username")
                        div.form-group
                            label.cols-sm-2.control-label(for="nickname") Nickname
                            div.cols-sm-10
                                div.input-group
                                    span.input-group-addon
                                        i.fa.fa-users.fa(aria-hidden="true")
                                    input#nickname.form-control(type="text" name="nickname" placeholder="Enter your Nickname")
                        div.form-group
                            label.cols-sm-2.control-label(for="password") Password
                            div.cols-sm-10
                                div.input-group
                                    span.input-group-addon
                                        i.fa.fa-lock.fa-lg(aria-hidden="true")
                                    input#password.form-control(type="password" name="password"  placeholder="Enter your Password")
                        div.form-group
                            label.cols-sm-2.control-label(for="password") Confirm Password
                            div.cols-sm-10
                                div.input-group
                                    span.input-group-addon
                                        i.fa.fa-lock.fa-lg(aria-hidden="true")
                                    input#password.form-control(type="password" name="confirm-password"  placeholder="Confirm your Password")
                        div.form-group
                            button#button.btn.btn-primary.btn-lg.btn-block.login-button(type="submit") Register
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
        script(src="js/bootstrap.min.js")
