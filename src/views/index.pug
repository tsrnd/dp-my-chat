      $(document).ready(function(){
        $(document).click(function(e) {
          if (e.target.id === 'action_menu_btn') {
            $('.action_menu').toggle();
            $('.action_menu_profile').hide();
          } else if(e.target.id === 'action_profile') {
            $('.action_menu_profile').toggle();
            $('.action_menu').hide();
          } else {
            $('.action_menu, .action_menu_profile').hide();
          }
        });
      });

